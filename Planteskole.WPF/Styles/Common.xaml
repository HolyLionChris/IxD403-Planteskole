<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Colors-->

    <Color x:Key="ColorPrimary1">#31618A</Color>
    <Color x:Key="ColorPrimary2">#203874</Color>
    <Color x:Key="ColorPrimary3">#D3D3D3</Color>
    <Color x:Key="ColorPrimary4">#F0F0F0</Color>
    
    <!--brushes-->
    <SolidColorBrush x:Key="BrushPrimary1" Color="{StaticResource ColorPrimary1}"/>
    <SolidColorBrush x:Key="BrushPrimary2" Color="{StaticResource ColorPrimary2}"/>
    <SolidColorBrush x:Key="BrushPrimary3" Color="{StaticResource ColorPrimary3}"/>
    <SolidColorBrush x:Key="BrushPrimary4" Color="{StaticResource ColorPrimary4}"/>

    <!--DataGrid Column Styles-->
    <Style x:Key="EmptyColumnCellStyle" TargetType="DataGridCell">
        <Setter Property="IsEnabled" Value="False"/>
        <Setter Property="Background" Value="{StaticResource BrushPrimary4}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <!--<Style.Triggers>
            <Trigger Property="IsEditing" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushPrimary2}"/>
            </Trigger>
        </Style.Triggers>-->
    </Style>
    <Style x:Key="EmptyColumnHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background"  Value="{StaticResource BrushPrimary4}"/>
    </Style>

</ResourceDictionary>